    <label for="exampleInputreason">Reason</label>
    <input type="text-area" class="form-control" id="exampleInputreason"  name="Reason" placeholder="Your reason">
  </div>
  <div class="form-group">
    <label for="exampleInputplace">Place</label>
    <input type="text" class="form-control" id="exampleInputplace" name="Place" placeholder="place">
  </div>
  <div class="checkbox">
    <label>
      <input type="checkbox" required> Check me out
