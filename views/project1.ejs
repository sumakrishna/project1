    <label for="exampleInputfrom">From:</label>
    <input type="date" class="form-control" id="exampleInputfrom" name="From" placeholder="From">
  </div>
  <div class="form-group">
    <label for="exampleInputto">To:</label>
    <input type="date" class="form-control" id="exampleInputto" name="To" placeholder="To">
